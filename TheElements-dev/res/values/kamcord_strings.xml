    <style name="KamcordButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@null</item>
        <item name="android:minWidth">@null</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@drawable/kamcord_button_background</item>
        <item name="android:textColor">@color/kamcordButtonTextColor</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="KamcordButton.Share">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/kamcordButtonActive</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="KamcordButton.Share.Landscape">
        <item name="android:layout_height">76.333dp</item>
    </style>

    <style name="KamcordButton.Small">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/kamcordButtonActive</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="KamcordEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="KamcordShareWidgetContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="KamcordShareWidgetIcon">
        <item name="android:layout_width">@dimen/kamcordShareWidgetImageSize</item>
        <item name="android:layout_height">@dimen/kamcordShareWidgetImageSize</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:focusable">false</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="KamcordShareWidgetText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/kamcordShareWidgetTextSize</item>
        <item name="android:textColor">@color/kamcord_share_widget_text</item>
    </style>
    
    <style name="KamcordProfileSettingsItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/kamcordProfileSettingsItemHeight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/kamcordProfileSettingsSpacing</item>
    </style>
    
    <style name="KamcordProfileSettingsItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/kamcordProfileSettingsTextColor</item>
        <item name="android:textSize">@dimen/kamcordProfileSettingsTextsize</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="KamcordProfileSettingsItemIcon">
        <item name="android:layout_width">@dimen/kamcordProfileSettingsIconSize</item>
        <item name="android:layout_height">@dimen/kamcordProfileSettingsIconSize</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginRight">@dimen/kamcordProfileSettingsSpacing</item>
    </style>
    
    <style name="KamcordProfileSettingsNetworkText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/kamcordProfileSettingsTextColor</item>
        <item name="android:textSize">@dimen/kamcordProfileSettingsTextsize</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="KamcordProfileSettingsUsernameText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/kamcordProfileSettingsSmallTextsize</item>
    </style>
    
    <style name="KamcordProfileSettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/kamcordDividerWidth</item>
        <item name="android:layout_marginLeft">@dimen/kamcordProfileSettingsSpacing</item>
        <item name="android:layout_marginRight">@dimen/kamcordProfileSettingsSpacing</item>
        <item name="android:background">@color/kamcordDividerColor</item>
    </style>
    
