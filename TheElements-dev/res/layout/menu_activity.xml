<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/idkjava.thelements" 
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:orientation="vertical"
    android:gravity="center" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/mm_layout_bg">
	    
	    <!-- Start game button --> 
	    <Button
	    	android:id="@+id/start_game_button"
	    	android:text="@string/start_game_button" 
	    	android:layout_width="200sp"
	    	android:background="@drawable/btn_mm" 
	    	android:layout_height="34dip" android:textColor="#FFF" android:layout_marginTop="3dip"/>
	    	
	    <!-- Custom elements button -->
	    <Button
	    	android:id="@+id/custom_elements_button"
	    	android:text="@string/custom_elements_button"
	    	android:layout_width="200sp"
	    	android:gravity="center" 
	    	android:background="@drawable/btn_mm" 
	    	android:layout_height="34dip" android:textColor="#FFF" android:layout_marginTop="10dip"/>

		<!-- Unlock items button -->
		<Button
			android:id="@+id/unlock_features_button"
			android:text="@string/unlock_game_features"
			android:gravity="center"
			android:background="@drawable/btn_mm"
			android:textColor="#FFF"
			android:layout_marginTop="10dip"
			android:layout_width="200sp"
			android:layout_height="34dip" />
	    
	    <!-- Preferences button -->
	    <Button
	        android:id="@+id/preferences_button"
	        android:text="@string/preferences_button"
	        android:layout_width="200sp"
	        android:gravity="center"
	        android:background="@drawable/btn_mm"
	        android:layout_height="34dip"
	        android:textColor="#FFF"
	        android:layout_marginTop="10dip" />
	    
	    <!-- Fix me button -->
	    <Button
	    	android:id="@+id/fix_me_button"
	    	android:text="@string/fix_me_button"
	    	android:layout_width="200sp"
	    	android:gravity="center"
	    	android:background="@drawable/btn_mm" 
	    	android:layout_height="34dip" android:textColor="#FFF" android:layout_marginTop="10dip"/>
	    
	    <!-- How-to-play button -->
	    <Button
	    	android:id="@+id/how_to_play_button"
	    	android:text="@string/how_to_play_button"
	    	android:gravity="center"
	    	android:layout_width="200sp" 
	    	android:background="@drawable/btn_mm" 
	    	android:layout_height="34dip" android:textColor="#FFF" android:layout_marginTop="10dip"/>

	    <!-- About button -->
	    <Button
	    	android:id="@+id/about_button"
	    	android:text="@string/about_button"
	    	android:layout_width="200sp" 
	    	android:background="@drawable/btn_mm" 
	    	android:layout_height="34dip" android:textColor="#FFF" android:layout_marginTop="10dip"/>
	    
</LinearLayout>